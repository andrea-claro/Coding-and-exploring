<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://www.springframework.org/schema/context  
	   http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	   <context:component-scan base-package="it.model"/>
	 <bean id="persona" class="it.model.Persona">
	 	  <property name="nome" value="Mario" />
	 	  <property name="cognome" value="Rossi" />
	 	  <property name="indirizzo" ref="indirizzo" />
	 </bean>
	 <bean id="indirizzo" class="it.model.Indirizzo">
	 	 <property name="via" value="via Nuovo Indirizzo" />
	 	 <property name="provincia" value="Napoli" />
	 	 <property name="cap" value="80100" />
	 </bean>
	 <bean id="citta" class="it.model.Citta">
	 <property name="lista">
     <set value-type="it.model.Indirizzo">
            <ref bean="indirizzo"/>
            <bean id="indirizzo2" class="it.model.Indirizzo">
            	<property name="via" value="Via Rossini" />
	 	  		<property name="provincia" value="Milano" />
	 	   		<property name="cap" value="91100" />
            </bean>
        </set>
    </property>
	</bean>
</beans>